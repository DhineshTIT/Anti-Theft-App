<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:paddingBottom="55dp"
    android:paddingTop="60dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:orientation="vertical"
    tools:context="com.example.kd.ata.ScreenOnPassword">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entre Password"
            android:gravity="center"
            android:textSize="30dp"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <EditText
            android:id="@+id/email"
            style="@style/editText_style1"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="Entre Email"
            />

        <EditText
            android:id="@+id/pwd"
            android:inputType="textPassword"
            style="@style/editText_style1"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="Entre Password"
            />

        <Button
            android:id="@+id/check"
            style="@style/Buttonstyle_homepage"
            android:onClick="passcheck"
            android:text="Check"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:gravity="center"
            android:onClick="forgetpassword"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            style="@style/textview_style"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/passlimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have 3 tries left"
            android:gravity="center"
            android:paddingLeft="20dp"
            style="@style/textview_style"/>

    </LinearLayout>


</RelativeLayout>
